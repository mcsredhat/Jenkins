# ===========================================
# PHP-APACHE SERVICE CONFIGURATION
# ===========================================
PHP_VERSION=8.1-apache
PHP_USER_ID=1100
PHP_USER_NAME=phpapacheuser
PHP_GROUP_ID=1100
PHP_GROUP_NAME=phpapachegrp
PHP_DIR_PATH=/var/www/html/
PHP_APP_PORT=8088
PHP_MOUNT1=/php/data
PHP_MOUNT2=/php/logs
PHP_SHELL=/bin/bash
PHP_HOSTNAME=php-apache-host
PHP_ENV=production
PHP_HEALTH_URL=http://localhost:8088
PHP_VAR_RUN_PATH=/var/run/apache2
# CORRECTED: Removed "php-apache/" prefix since build context is already php-apache/
PHP_CP_SRC=./php-apache/src
PHP_CP_PHP_CFG=./php-apache/php-config
PHP_CP_APACHE_CFG=./php-apache/apache-config
PHP_VAR_LOGS=/var/log/apache2

# ===========================================
# ENVIRONMENT & NETWORK CONFIGURATION
# ===========================================
TZ=Europe/Paris
BACKEND_HOST=mysql-db

# ===========================================
# DOCKER COMPOSE CONFIGURATION
# ===========================================
COMPOSE_PROJECT_NAME=php-mysql-app
PHP_CONTAINER_NAME=php-apache
PHP_DATA_VOLUME=php_data
PHP_LOG_VOLUME=php_logs

# ===========================================
# MYSQL CONNECTION CONFIGURATION
# ===========================================
MYSQL_HOST=mysql-db
MYSQL_PORT=3306
MYSQL_DATABASE=myappdb
MYSQL_USER=appuser
MYSQL_PASSWORD=MyAppUserPass456!@#
MYSQL_ROOT_PASSWORD=rootpass123!@#

# ===========================================
# MYSQL CONTAINER CONFIGURATION
# ===========================================
MYSQL_CONTAINER_NAME=mysql-db
MYSQL_DATA_VOLUME=mysql_data
MYSQL_LOG_VOLUME=mysql_logs
MYSQL_USER_ID=1010
MYSQL_GROUP_ID=1010
MYSQL_USER_NAME=mysqluser
MYSQL_GROUP_NAME=mysqlgroup

# ===========================================
# ADDITIONAL MYSQL CONFIGURATION
# ===========================================
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci
MYSQL_LOWER_CASE_TABLE_NAMES=1
MYSQL_MAX_CONNECTIONS=151
MYSQL_INNODB_BUFFER_POOL_SIZE=256M
