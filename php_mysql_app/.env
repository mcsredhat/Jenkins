# MySQL Configuration (used by docker-compose.yml and pipeline-config.yml)
MYSQL_ROOT_PASSWORD=secure_root_password
MYSQL_DATABASE=php_mysql_app_db
MYSQL_USER=app_user
MYSQL_PASSWORD=secure_user_password

# Jenkins Pipeline Configuration
DOCKER_USERNAME=farajassulai
DOCKER_REGISTRY=https://index.docker.io/v1/
DOCKER_CREDENTIALS_ID=dockerhub-credentials
GITHUB_TOKEN=ghp_your_github_token_here
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SONAR_HOST_URL=http://sonarqube:9000
SONAR_AUTH_TOKEN=your_sonarqube_token_here

# Application Configuration
APP_TYPE=php
APP_DIR=php_mysql_app
COMPOSE_FILE=docker-compose.yml
USE_COMPOSE=true
DEPLOYMENT_STRATEGY=canary
CANARY_PERCENTAGE=10
HEALTH_CHECK_TIMEOUT=300
ROLLBACK_ON_FAILURE=true

# Docker Configuration
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
DOCKER_SCAN_SUGGEST=false
DOCKER_CLI_EXPERIMENTAL=enabled
DOCKER_PLATFORMS=linux/amd64,linux/arm64
ENABLE_MULTIARCH=false
DOCKER_SQUASH=false
DOCKER_NO_CACHE=false
DOCKER_MEMORY_LIMIT=1g
DOCKER_CPU_LIMIT=0.5
DOCKER_NETWORK_MODE=web-app-net
ENABLE_DOCKER_SWARM=false

# Security and Quality
ENABLE_SECRETS_SCAN=true
ENABLE_SAST_SCAN=true
ENABLE_DEPENDENCY_SCAN=true
ENABLE_CODE_COVERAGE=true
COVERAGE_THRESHOLD=80
ENABLE_IMAGE_SIGNING=false
MAX_CRITICAL_VULNERABILITIES=2
FAIL_ON_SECRETS=false
SKIP_SECURITY_SCAN=false
ENABLE_DOCKER_PUSH=true
ENABLE_STAGING_DEPLOY=true
ENABLE_PRODUCTION_DEPLOY=true
ENABLE_PARALLEL_TESTING=true
FORCE_BRANCH_MAIN=true
FORCE_BRANCH_DEVELOP=false

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_GATEWAY=http://pushgateway:9091
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://jaeger:14268/api/traces

# Ports (aligned with pipeline-config.yml and docker-compose.yml)
APP_PORT=8989
TEST_PORT=8383
STAGING_PORT=8989
PRODUCTION_PORT=8989

# Volume Paths
PHP_DATA_PATH=./volumes/php_data
PHP_LOGS_PATH=./volumes/php_logs
MYSQL_DATA_PATH=./volumes/mysql_data
MYSQL_LOGS_PATH=./volumes/mysql_logs
TIMEZONE=UTC
