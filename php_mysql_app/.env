# Note: Add this file to .gitignore to prevent sensitive data exposure
# ===========================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# DATABASE CREDENTIALS
# ===========================================
MYSQL_ROOT_PASSWORD=rootpass123!@#
MYSQL_DATABASE=myappdb
MYSQL_USER=sqluser
MYSQL_PASSWORD=MyAppUserPass456!@#

# ===========================================
# NETWORK & TIMEZONE CONFIGURATION
# ===========================================
TIMEZONE=Europe/Paris
NETWORK_SUBNET=172.18.19.0/24

# ===========================================
# PORTS CONFIGURATION
# ===========================================
PHP_EXTERNAL_PORT=8989
MYSQL_EXTERNAL_PORT=3306
ADMINER_EXTERNAL_PORT=8181

# ===========================================
# VOLUME PATHS (HOST DIRECTORIES)
# ===========================================
PHP_DATA_PATH=./volumes/php_data
PHP_LOGS_PATH=./volumes/php_logs
MYSQL_DATA_PATH=./volumes/mysql_data
MYSQL_LOGS_PATH=./volumes/mysql_logs

# ===========================================
# RESOURCE LIMITS
# ===========================================
MEMORY_LIMIT=1g
CPU_LIMIT=0.5
MEMORY_RESERVATION=512m
CPU_RESERVATION=0.25

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10
LOG_COMPRESS=true

# ===========================================
# HEALTHCHECK CONFIGURATION
# ===========================================
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=15s
HEALTHCHECK_RETRIES=3
HEALTHCHECK_START_PERIOD=30s

# ===========================================
# DNS CONFIGURATION
# ===========================================
DNS_PRIMARY=1.1.1.1
DNS_SECONDARY=8.8.8.8

# ===========================================
# MAINTAINER INFORMATION
# ===========================================
MAINTAINER=farajassulai
MAINTAINER_EMAIL=farajassulai@gmail.com
APP_DESCRIPTION=php-apache2 application with custom configuration
DATE_CREATED=2025-06-20
