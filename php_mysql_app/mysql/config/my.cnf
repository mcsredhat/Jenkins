[mysqld]
# Basic settings
# Note: MySQL runs as 'mysql' user by default, not custom user
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
lc-messages-dir = /usr/share/mysql
skip-external-locking

# Character set and collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Logging - Updated to use standard MySQL paths
log-error = /var/log/mysql/error.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2
log-queries-not-using-indexes = 1

# General log (optional - can be resource intensive)
# general_log = 1
# general_log_file = /var/log/mysql/general.log

# Binary logging for replication (optional)
# log-bin = /var/log/mysql/mysql-bin
# server-id = 1

# Performance tuning - Values from .env file
max_connections = 151
connect_timeout = 60
wait_timeout = 600
max_allowed_packet = 16M
thread_cache_size = 128
sort_buffer_size = 4M
bulk_insert_buffer_size = 16M
tmp_table_size = 32M
max_heap_table_size = 32M

# MyISAM settings
myisam_recover_options = BACKUP
key_buffer_size = 128M
table_open_cache = 400
myisam_sort_buffer_size = 512M
concurrent_insert = 2
read_buffer_size = 2M
read_rnd_buffer_size = 1M

# InnoDB settings - Value from .env file
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_file_per_table = 1
innodb_open_files = 400
innodb_io_capacity = 400
innodb_flush_method = O_DIRECT

# Security settings
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

# Case sensitivity setting from .env
lower_case_table_names = 1

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock