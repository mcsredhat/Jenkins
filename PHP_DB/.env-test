# ===========================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES - TEST ENVIRONMENT
# ===========================================
# ===========================================
# PHP-APACHE SERVICE CONFIGURATION
# ===========================================
PHP_VERSION=8.1-apache
PHP_USER_ID=1100
PHP_USER_NAME=phpapacheuser
PHP_GROUP_ID=1100
PHP_GROUP_NAME=phpapachegrp
PHP_DIR_PATH=/var/www/html/
PHP_APP_PORT=8091
PHP_MOUNT1=/php/data
PHP_MOUNT2=/php/logs
PHP_SHELL=/bin/bash
PHP_HOSTNAME=php-apache-host
PHP_ENV=test
PHP_HEALTH_URL=http://localhost:8091/health
PHP_VAR_RUN_PATH=/var/run/apache2
PHP_CP_SRC=/php-apache/src
PHP_CP_PHP_CFG=/php-apache/php-config
PHP_CP_APACHE_CFG=/php-apache/apache-config
PHP_VAR_LOGS=/var/log/apache2
PHP_CONTAINER_NAME=php-apache-test
PHP_DATA_VOLUME=php_data
PHP_LOG_VOLUME=php_logs

# ===========================================
# MYSQL SERVICE CONFIGURATION
# ===========================================
MYSQL_VERSION=8.0
MYSQL_USER_ID=1010
MYSQL_USER_NAME=sqluser
MYSQL_GROUP_ID=1010
MYSQL_GROUP_NAME=sqlgroup
MYSQL_APP_PORT=3306
MYSQL_APP_ENV=test
MYSQL_BASH_SHELL=/bin/bash
MYSQL_APP_DIR=/sqldb
MYSQL_MOUNT1=/sqldb/data
MYSQL_MOUNT2=/sqldb/logs
MYSQL_CONTAINER_NAME=mysql-db-test
MYSQL_DATA_VOLUME=mysql_data
MYSQL_LOG_VOLUME=mysql_logs
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci
MYSQL_LOWER_CASE_TABLE_NAMES=1
MYSQL_MAX_CONNECTIONS=151
MYSQL_INNODB_BUFFER_POOL_SIZE=256M

# ===========================================
# DATABASE CREDENTIALS - TEST ENVIRONMENT
# ===========================================
MYSQL_ROOT_PASSWORD=test_rootpass
MYSQL_DATABASE=test_db
MYSQL_USER=test_user
MYSQL_PASSWORD=test_password
MYSQL_HOST=mysql-db
MYSQL_PORT=3306

# ===========================================
# TIMEZONE & NETWORK CONFIGURATION
# ===========================================
TZ=Europe/Paris
BACKEND_HOST=mysql-db
NETWORK_SUBNET=172.19.20.0/24
COMPOSE_PROJECT_NAME=php-mysql-app-test

# ===========================================
# PORTS CONFIGURATION - TEST ENVIRONMENT
# ===========================================
PHP_EXTERNAL_PORT=8091
MYSQL_EXTERNAL_PORT=3308
ADMINER_EXTERNAL_PORT=8084
ADMINER_CONTAINER_NAME=adminer-test

# ===========================================
# VOLUME PATHS (HOST DIRECTORIES) - TEST
# ===========================================
PHP_DATA_PATH=./volumes/test/php_data
PHP_LOGS_PATH=./volumes/test/php_logs
MYSQL_DATA_PATH=./volumes/test/mysql_data
MYSQL_LOGS_PATH=./volumes/test/mysql_logs

# ===========================================
# RESOURCE LIMITS
# ===========================================
PHP_MEMORY_LIMIT=1g
PHP_CPU_LIMIT=0.5
PHP_MEMORY_RESERVATION=512m
PHP_CPU_RESERVATION=0.25
MYSQL_MEMORY_LIMIT=2g
MYSQL_CPU_LIMIT=1.0
MYSQL_MEMORY_RESERVATION=1g
MYSQL_CPU_RESERVATION=0.5

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10
LOG_COMPRESS=true

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
ULIMIT_NOFILE_SOFT=1024
ULIMIT_NOFILE_HARD=65536
ULIMIT_NPROC_SOFT=1024
ULIMIT_NPROC_HARD=4096

# ===========================================
# HEALTHCHECK CONFIGURATION
# ===========================================
HEALTHCHECK_INTERVAL=30s
HEALTHCHECK_TIMEOUT=15s
HEALTHCHECK_RETRIES=5
HEALTHCHECK_START_PERIOD=60s

# ===========================================
# DNS CONFIGURATION
# ===========================================
DNS_PRIMARY=1.1.1.1
DNS_SECONDARY=8.8.8.8

# ===========================================
# MAINTAINER INFORMATION
# ===========================================
MAINTAINER=farajassulai
MAINTAINER_EMAIL=farajassulai@gmail.com

DATE_CREATED=2025-07-18
VERSION=1.0.0
